<div class="container">
    <div class="container-fluid content-row">
        <div class="row mb-3">
        @foreach (var actor in Actors)
        {
            <div class="col col-md-4">
                <div class="card">
                    <img src="@actor.Photo" class="img-thumbnail" alt="@actor.Name" width="100%">
                    <div class="card-body">
                        <h5 class="card-title">@actor.Name</h5>
                        <p class="card-text">@actor.Biography</p>
                    </div>
                    <div class="card-footer">
                        <p class="text-muted">@actor.BirtDate</p>
                    </div>
                </div>
            </div>
        }
        </div>
    </div>
</div>

@code{
    [Parameter] public List <Actor> Actors{get;set;}
}